<?xml version="1.0" encoding="UTF-8"?>
<t:test expected="pass"
        xmlns:t="http://xproc.org/ns/testsuite/3.0">
  <t:info>
    <t:title>unique-id-006</t:title>
    <t:revision-history>
      <t:revision>
        <t:date>2024-10-26</t:date>
        <t:author>
          <t:name>Norm Tovey-Walsh</t:name>
        </t:author>
        <t:description xmlns="http://www.w3.org/1999/xhtml">
          <p>Created test.</p>
        </t:description>
      </t:revision>
    </t:revision-history>
  </t:info>
  <t:description xmlns="http://www.w3.org/1999/xhtml">
    <p>Tests creating a type 6 UUID.</p>
  </t:description>
  <t:pipeline>
    <p:declare-step version="3.0"
                    xmlns:cx="http://xmlcalabash.com/ns/extensions"
                    xmlns:p="http://www.w3.org/ns/xproc">
      <p:import href="https://xmlcalabash.com/ext/library/unique-id.xpl"/>
      <p:output port="result"/>
      <cx:unique-id match="/*/@uuid"
                    flavor="uuid" parameters="map{'version': 6}">
        <p:with-input>
          <doc uuid=""/>
        </p:with-input>
      </cx:unique-id>
    </p:declare-step>
  </t:pipeline>
  <t:schematron>
    <s:schema queryBinding="xslt2"
              xmlns:s="http://purl.oclc.org/dsdl/schematron">
      <s:pattern>
        <s:rule context="/">
          <s:assert test="doc">The document root is not doc.</s:assert>
          <s:assert test="doc/@uuid">No “uuid” attribute on doc.</s:assert>
          <s:assert test="string-length(doc/@uuid) gt 0">The “uuid” attribute is empty.</s:assert>
        </s:rule>
      </s:pattern>
    </s:schema>
  </t:schematron>
</t:test>
